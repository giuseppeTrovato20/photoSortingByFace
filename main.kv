#:kivy 1.0.9

<RootWidget>:
    orientation: 'vertical'
    FileChooserIconView:
        id: filechooser
        dirselect: True
        size_hint_y: 0.9
    AnchorLayout:
        size_hint_y: 0.1
        Button:
            text: "Select"
            size_hint: 0.2, 1
            on_release: root.select()
            anchor_x: 'right'
            anchor_y: 'bottom'